<%if @tags.count > 0 %>
  <div id="index_tag">
    <%@tags.each do |tag|%>
      <div class="tag_card">
        <div class="form">
          <%= form_for(tag, :url => done_tag_path(tag)) do |f| %>
            <h2><%=tag.title%></h2>

            <div class="field">
              <p><%=tag.description%><p>
            </div>

            <div class="actions">
              <%= link_to "Edit", edit_tag_path(tag) %>
              <%= f.submit "Delete" %>
            </div>
        </div>
      <%end%>
      </div>
    <%end%>
  </div>
<%else%>
  <%= render :partial => 'notag'%>
<%end%>
